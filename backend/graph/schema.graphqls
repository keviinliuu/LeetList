enum Difficulty {
  EASY
  MEDIUM
  HARD
}

type Question {
  ID: ID!
  title: String!
  url: String!
  difficulty: Difficulty!
  complete: Boolean!
}

type List {
  ID: ID!
  title: String!
  description: String
  entries: [Question!]!
}

type QuestionInfo {
  title: String!
  difficulty: String!
}

input NewQuestion {
  title: String!
  url: String!
  difficulty: Difficulty!
}

input UpdateQuestion {
  title: String
  url: String
  difficulty: Difficulty
}

input NewList {
  title: String!
  description: String
  entries: [NewQuestion!]!
}

input UpdateList {
  title: String
  description: String
  addQuestions: [NewQuestion!]
  removeQuestionIds: [ID!]
}

type Query {
  # Fetch a question
  question(id: ID!): Question

  # Fetch all questions
  questions: [Question!]

  # Fetch a specific list 
  list(id: ID!): List

  # Fetch all lists
  lists: [List!]

  # Scrape the question and get its info
  scrapeQuestion(url: String!): QuestionInfo
}

type Mutation {
  # Create a question
  createQuestion(input: NewQuestion!): Question

  # Update a question
  updateQuestion(id: ID!, input: UpdateQuestion!): Question

  # Create a new list 
  createList(input: NewList!): List

  # Update a list 
  updateList(id: ID!, input: UpdateList!): List
}
